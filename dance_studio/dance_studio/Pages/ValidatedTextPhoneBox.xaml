<UserControl x:Class="dance_studio.Pages.ValidatedTextPhoneBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <Grid>
        <TextBox Name="PhoneTextBox"
                 Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 LostFocus="PhoneTextBox_LostFocus" />
    </Grid>
</UserControl>
